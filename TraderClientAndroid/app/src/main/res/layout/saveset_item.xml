<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="242dp"
        android:background="@drawable/savesetitem_up_bg">

        <LinearLayout
            android:id="@+id/saveseitem"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/one"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/savesetitem_zhiying"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:gravity="end"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/two"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/savesetitem_zhisun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29"
                    android:gravity="end"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/three"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/savesetitem_cangwei"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="23"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单元价格：  "
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/savesetitem_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:gravity="end"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/savesetitem_name"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_below="@+id/saveseitem"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/savesetitem_edt_bg"
            android:hint="输入保存名称"
            android:inputType="text"
            android:lines="1"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/savesetitem_exit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    android:textColor="#ff949494"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/savesetitem_sure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#005AFF"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认"
                    android:textColor="#ffffffff"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
