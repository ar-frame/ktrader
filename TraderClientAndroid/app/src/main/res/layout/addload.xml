<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fFFFFFFF"
    android:fitsSystemWindows="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">
        <RelativeLayout
            android:id="@+id/addload_out"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="19dp"
                android:src="@mipmap/re_out"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增设置"
            android:textColor="#ff000000"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            />

        <RelativeLayout
            android:id="@+id/addload_question"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/wenhao"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#fff"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:text="设置名称"
                android:layout_centerVertical="true"
                android:textColor="#ff000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/mingchen"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:textColor="#ff000000"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:hint="输入设置名称"
                android:maxLength="8"
                android:inputType="text"
                android:textSize="15sp"
                android:textCursorDrawable="@drawable/edit_cursor_blue"
                android:gravity="end|center"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#fff"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:text="单元金额"
                android:layout_centerVertical="true"
                android:textColor="#ff000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/yuan"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:textSize="14sp"
                android:textColor="#ff000000"
                android:layout_toStartOf="@+id/yuandanwei"
                android:background="@drawable/main_edt_bg"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:inputType="date"
                android:maxLength="7"
                android:textCursorDrawable="@drawable/edit_cursor_blue"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/yuandanwei"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:text="元"
                android:gravity="end"
                android:textColor="#ff000000"
                android:textSize="14sp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#fff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知等级："
                android:textColor="#ff000000"
                android:textSize="14sp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                />

            <EditText
                android:id="@+id/addload_notifylevel"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:textSize="14sp"
                android:textColor="#ff000000"
                android:hint="0~9级"
                android:layout_toStartOf="@+id/yingdian"
                android:background="@drawable/main_edt_bg"
                android:layout_centerVertical="true"
                android:inputType="numberDecimal"
                android:digits="0123456789"
                android:gravity="center"
                android:textCursorDrawable="@drawable/edit_cursor_blue"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:id="@+id/yingdian"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:text="级"
                android:textColor="#ff000000"
                android:textSize="14sp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#fff"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two"
                android:textColor="#ff000000"
                android:textSize="14sp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zhengfuhao"
                android:layout_toStartOf="@+id/one"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                />

            <EditText
                android:id="@+id/one"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:textSize="14sp"
                android:textColor="#ff000000"
                android:layout_toStartOf="@+id/kuidian"
                android:background="@drawable/main_edt_bg"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:textCursorDrawable="@drawable/edit_cursor_blue"
                android:inputType="date"
                />

            <TextView
                android:id="@+id/kuidian"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:text="点"
                android:textColor="#ff000000"
                android:textSize="14sp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#fff"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:text="@string/three"
                android:textColor="#ff000000"
                android:layout_centerVertical="true"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zhengfuhao"
                android:layout_toStartOf="@+id/two"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                />

            <EditText
                android:id="@+id/two"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:textSize="14sp"
                android:textColor="#ff000000"
                android:layout_toStartOf="@+id/baifenhao"
                android:background="@drawable/main_edt_bg"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:inputType="date"
                android:textCursorDrawable="@drawable/edit_cursor_blue"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/baifenhao"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:text="%"
                android:gravity="end"
                android:textColor="#ff000000"
                android:textSize="14sp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/addload_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#FAFAFA">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="#ff000000"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addload_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#bad2ff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
